<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listScrollView"
    android:layout_width="match_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/paper01"
        android:orientation="vertical" >

        

        <TextView
            android:id="@+id/txt_yj_detail_Subject"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10sp"
            android:text="邮件主题"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />
<TextView
            android:id="@+id/txt_yj_detail_Date"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="10sp"
            android:text="发文时间"
            android:textColor="#000000"
            android:textSize="14sp" />
        
        <TextView
            android:id="@+id/txt_yj_detail_Body"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="10sp"
            android:singleLine="false"
            android:text="正文"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_yj_detail_From"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="5sp"
            android:text="发件人"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt_yj_detail_To"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="5sp"
            android:text="收件人"
            android:textColor="#000000"
            android:textSize="14sp" />

    

        <TextView
            android:id="@+id/txt_yj_detail_ReplyTo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="10sp"
            android:paddingRight="10sp"
            android:text="回复人"
            android:textColor="#000000"
            android:textSize="14sp" />

   <TextView
            android:id="@+id/txt_yj_detail_Cc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="10sp"
            android:paddingRight="10sp"
            android:text="抄送人"
            android:textColor="#000000"
            android:textSize="14sp" />

        <com.zcj.lib.MyListView
            android:id="@+id/lv_yj_detail_AttachFiles"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
        </com.zcj.lib.MyListView>

    
    </LinearLayout>

</ScrollView>