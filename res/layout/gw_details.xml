<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listScrollView"
    android:layout_width="match_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/paper01"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtRedTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8sp"
            android:text="文件红头"
            android:textColor="#FF0000"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtNumber"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10sp"
            android:text="发文类及文件号"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/imgRedLine"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/hong_xian" />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10sp"
            android:text="公文标题"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtContent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="10sp"
            android:singleLine="false"
            android:text="正文"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtFileType"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="5sp"
            android:text="呈送人"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtSuggestion"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="5sp"
            android:text="呈送意见"
            android:textColor="#000000"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/imgRedLine2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/hong_xian" />

        <TextView
            android:id="@+id/txtSendDept"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="10sp"
            android:paddingRight="10sp"
            android:text="发文科室"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtSendDate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="10sp"
            android:text="发文时间"
            android:textColor="#000000"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/imgRedLine3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/hong_xian" />

        <com.zcj.lib.MyListView
            android:id="@+id/lvAttachFiles"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
        </com.zcj.lib.MyListView>

        <ImageView
            android:id="@+id/imgRedLine4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/hong_xian" />

        <com.zcj.lib.MyListView
            android:id="@+id/lvInstructions"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
        </com.zcj.lib.MyListView>
    </LinearLayout>

</ScrollView>