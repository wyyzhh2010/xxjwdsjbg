<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listScrollView"
    android:layout_width="match_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txt_tq_jieshou_detail_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8sp"
            android:textColor="@color/red"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_tq_jieshou_detail_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8sp"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edt_tq_jieshou_detail_reply"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="在这里输入回复内容"
            android:textSize="20sp" >
        </EditText>

        <Button
            android:id="@+id/btn_tq_jieshou_detail_ok"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_login_selector"
            android:text="确定" />
    </LinearLayout>

</ScrollView>