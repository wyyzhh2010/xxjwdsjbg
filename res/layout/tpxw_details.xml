<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listScrollView"
    android:layout_width="match_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/paper01"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txt_tpxw_details_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8sp"
            android:text="新闻标题"
            android:textColor="#FF0000"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_tpxw_details_dept"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10sp"
            android:text="发文单位及日期"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="normal" />

        <com.zcj.lib.AutoScrollViewPager
            android:id="@+id/view_pager_tpxw_details_images"
            android:layout_width="450dp"
            android:layout_height="200dp" />

        <TextView
            android:id="@+id/txt_tpxw_details_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10sp"
            android:text="公文标题"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

</ScrollView>